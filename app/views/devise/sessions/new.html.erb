<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class:"label" %><br />
    <%= f.email_field :email, autofocus: true, class:"text_field" %>
  </div>

  <div class="field">
    <%= f.label :password, class:"label" %><br />
    <%= f.password_field :password, autocomplete: "off", class:"text_field" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class:"label" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class:"sign_up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
